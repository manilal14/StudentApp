<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="4dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_marginTop="4dp"
        android:layout_marginBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/news_feed_recycyler_view_imageview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@mipmap/add_btn" />

            <TextView
                android:id="@+id/news_feed_recycyler_view_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="This is the place for title"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/news_feed_recycyler_view_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:singleLine="false"
                android:paddingBottom="16dp"
                android:text="Short description will be here. It can be of multi line.So better use it for multi line."
                android:textSize="16dp" />
        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>